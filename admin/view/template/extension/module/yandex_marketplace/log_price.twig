{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">

      <div id="filter-product" class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="form-group col-sm-6">
              <label class="control-label col-sm-12">{{ entry_date }}</label>
                <div class="col-sm-6">
                  <div class="input-group date">
                    <input type="text" name="filter_date_from" value="{{ filter_date_from }}" placeholder="{{ entry_from }}" data-date-format="YYYY-MM-DD" class="form-control" />
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                    </span>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="input-group date">
                    <input type="text" name="filter_date_to" value="{{ filter_date_to }}" placeholder="{{ entry_to }}" data-date-format="YYYY-MM-DD" class="form-control" />
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                    </span>
                  </div>
                </div>
            <div class="form-group text-right col-sm-12">
              <button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ text_filter }}</button>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i> {{ entry_listProducts }}</h3>
          </div>
          <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">{{ column_name }}</td>
                      <td class="text-left">{{ column_old_name }}</td>
                      <td class="text-right">{{ column_shopSku }}</td>
                      <td class="text-left">{{ column_established }}</td>
                      <td class="text-left">{{ column_user }}</td>
                      <td class="text-left">{{ column_date_updated }}</td>
                    </tr>
                  </thead>
                  <tbody>
                    {% for log in logs %}
                    <tr>
                      <td class="text-left">{{ log.offer_name }}</td>
                      <td class="text-left">{{ log.offer_name_old }}</td>
                      <td class="text-left">{{ log.offer_id }}</td>
                      <td class="text-left">{{ log.price }}</td>
                      <td class="text-left">{{ log.username }}</td>
                      <td class="text-left">{{ log.date_update }}</td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
             <div class="row">
								<div class="col-sm-6 text-left">{{ pagination }}</div>
								<div class="col-sm-6 text-right">{{ results }}</div>
							</div>
              <div class="row" style="margin-top: 10px;">
                <div class="col-sm-12">
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('#button-filter').on('click', function() {
    var url = '';

	var filter_date_from = $('input[name=\'filter_date_from\']').val();

	if (filter_date_from !== '') {
		url += '&filter_date_from=' + encodeURIComponent(filter_date_from);
	}

	var filter_date_to = $('input[name=\'filter_date_to\']').val();

	if (filter_date_to !== '') {
		url += '&filter_date_to=' + encodeURIComponent(filter_date_to);
	}
    location = 'index.php?route=extension/module/yandex_marketplace/offer_prices/historyPriceChanges&user_token={{ user_token }}' + url;
  });
</script>

  <script type="text/javascript"><!--
$('.date').datetimepicker({
	language: '{{ datepicker }}',
	pickTime: false
});

$('.time').datetimepicker({
	language: '{{ datepicker }}',
	pickDate: false
});

$('.datetime').datetimepicker({
	language: '{{ datepicker }}',
	pickDate: true,
	pickTime: true
});

	$('.date').datetimepicker({
		pickTime: false
	});


</script>

{{ footer }}